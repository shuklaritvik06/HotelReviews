<html lang="en">
<head>
    <%- include('./partials/header')%>
    <title>Hotel Rating App</title>
</head>
<body>
<div class="container">
    <header class="d-flex justify-content-between border-bottom py-3">
        <a href="/" class="text-decoration-none text-black"><h2>Hotelify</h2></a>
        <div>
            <a href="/add"><button class="btn btn-outline-success me-3">Add Hotel</button></a>
            <a href="https://twitter.com/shuklaritvik06"><button class="btn btn-success"><i class="bi bi-twitter"></i>&nbsp;Follow me</button></a>
        </div>
    </header>
    <%for(let i=0;i<reviews.length;i++){%>
    <div class="card mt-3">
        <div class="card-body d-flex">
            <img src="<%= reviews[i].imageUrl%>" style="height: 200px;width: 200px;aspect-ratio: auto;object-fit: cover"/>
            <div class="d-flex flex-column mx-5">
                    <h2><%= reviews[i].name %></h2>
                <p><%= reviews[i].description %></p>
                <div class="d-flex justify-content-between">
                        <p><i class="bi bi-geo-alt-fill"></i>&nbsp;<%= reviews[i].location%></p>
                        <div class="d-flex">
                        <a href="/rate/<%=reviews[i].id%>"><button class="btn btn-success me-3">Rate Now</button></a>
                        <a href="">
                            <form action="/dashboard/delete/<%=reviews[i].id%>?_method=DELETE" method="post"><button type="submit" class="btn btn-danger me-5">Delete</button></form></a>
                        <p><span class="fw-bold fs-4"><%= reviews[i].rating %></span>&nbsp;‚≠ê</p>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <%}%>
</div>
</body>
</html>
